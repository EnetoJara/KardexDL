<!DOCTYPE html>
<html lang="es">

<head>
    <%include ../header%>
</head>

<body>
    <%include ../nav%>
    <div class="pusher" style="background-color: #DADADA">
        <div class="ui text container">
            <div class="ui large secondary pointing menu" style="background-color: #fff">
                <a class="toc item"><i class="sidebar icon"></i> MENU</a>
                <%include ../navegador%>
            </div>
        </div>
        <div class="ui container" style="padding-top:15px;">
            <h1 class="ui center aligned header">Actualizar Control Escolar</h1>
        </div>
        <div class="ui text container">
            <div class="ui segments">
                <%if(message.length>0) {%>
                <div class="ui info message">
                    <i class="close icon"></i>
                    <div class="header">
                        <%=message%>
                    </div>
                </div>
                <%} else if(er.length>0){%>
                <div class="ui negative message">
                    <i class="close icon"></i>
                    <div class="header">
                        <%=er%>
                    </div>
                </div>
                <%}%>
                <form id="detalleForm" class="ui form" method="post" action="/actualizarControl">
                    <div class="ui segment">
                        <input type="text" hidden name="C_ID" value="<%=data[0].C_ID%>"/>
                        <div class="two fields">
                            <div class="field">
                                <label class="ui blue label">Nombre *</label>
                                <input id="detallesNombre" type="text" name="detallesNombre" placeholder="NOMBRE" value="<%=data[0].NOMBRE%>"/>
                            </div>
                            <div class="field">
                                <label class="ui yellow label">Segundo Nombre</label>
                                <input id="detallesSNombre" type="text" name="detallesSNombre" placeholder="SEGUNDO NOMBRE" value="<%=data[0].SNOMBRE%>" />
                            </div>
                        </div>
                        <div class="two fields">
                            <div class="field">
                                <label class="ui blue label">Apellido Paterno *</label>
                                <input id="detallesPaterno" type="text" name="detallesPaterno" placeholder="APELLIDO PATERNO" value="<%=data[0].APATERNO%>"/>
                            </div>
                            <div class="field">
                                <label class="ui yellow label">Apellido Paterno *</label>
                                <input id="detallesMaterno" type="text" name="detallesMaterno" placeholder="APELLIDO MATERNO" value="<%=data[0].AMATERNO%>" />
                            </div>
                        </div>
                        <div class="three fields">
                            <div class="field">
                                <label class="ui blue label">Matricula *</label>
                                <input id="detallesMatricula" type="text" name="detallesMatricula" value="<%=data[0].USERNAME%>" disabled/>
                            </div>
                            <div class="field">
                                <label class="ui blue label">Contrase√±a *</label>
                                <input id="detallePassword" type="text" name="detallePassword" value="<%=data[0].PASS%>" disabled/>
                            </div>
                            <div class="field">
                                <label class="ui blue label">Confirmar *</label>
                                <input id="detalleConfirmar" type="text" name="detalleConfirmar" value="<%=data[0].PASS%>"/>
                            </div>
                        </div>
                        <input type="text" hidden name="pass" value="<%=data[0].PASS%>"/>
                        <input type="text" hidden name="P_ID" value="<%=data[0].P_ID%>"/>
                        <div id="Updatetsubmit" class="inline field">
                            <div class="ui fluid large blue submit button">Actualizar la Informacion</div>
                        </div>
                        <div class="ui message error"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <footer>
        <%include ../footer%>
    </footer>
    </body>
    
    </html>
    
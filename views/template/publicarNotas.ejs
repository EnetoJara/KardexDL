<!DOCTYPE html>
<html lang="es">

<head>
    <%include ../header%>
</head>

<body>

    <%include ../nav%>
    <div class="pusher" style="background-color: #DADADA">
        <div class="ui container">

            <div class="ui text container">
                <div class="ui large secondary pointing menu" style="background-color: #fff">
                    <a class="toc item">
                        <i class="sidebar icon"></i> MENU
                    </a>
                    <%include ../navegador%>
                </div>
            </div>
            <div class="ui container" style="padding-top:15px;padding-bottom:15px;">
                <h1 class="ui center aligned header">Publicar Notas</h1>
            </div>
            <div class="ui text container">
                <div class="ui segments">
                <div class="ui segment">
                     <table class="ui center aligned table">
                <thead>
                    <th>ID</th>
                    <th>Carrera</th>
                    <th>Ciclo</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Publica</th>
                </thead>
                <tbody>
                <%if (data.length > 0) {%>
                    <%for (var i = 0; i < data.length; i++) {%>
                    <tr>
                        <td class="id"><%=data[i].ID%></td>
                        <td><%=data[i].CARRERA%></td>
                        <td><%=data[i].CICLO%></td>
                        <td><%=data[i].FECHAINICIO%></td>
                        <td><%=data[i].FECHAFIN%></td>

                        <td>
                            <%if (data[i].PUBLICA === 0) {%>
                            <a id="btnPublicar" class="ui button basic icon" href='#' data-tooltip='Publicar' data-position='top center' data-inverted=''>
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                            <%} else {%>

                            <a id="btnOcultar" class="ui button basic icon" href='#' data-tooltip='Ocultar' data-position='top center' data-inverted=''>
                                <i class="fa fa-eye-slash" aria-hidden="true"></i>
                            </a>
                            <%}%>
                            <%if (data[i].RESTRINGIR === 0) {%>
                            <a id="btnPermitir" class="ui button basic icon" href='#' data-tooltip='Permitir' data-position='top center' data-inverted=''>
                                <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                            </a>
                            <%} else {%>
                             <a id="btnRestringir" class="ui button basic icon" href='#' data-tooltip='Restringir' data-position='top center' data-inverted=''>
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </a>
                            <%}%>
                        </td>
                    </tr>
                    <%}%>
                <%}%>
                </tbody>
            </table>
                </div>
            </div>
            </div>
        </div>
    </div>
    <footer>
        <%include ../footer%>
    </footer>
    </body>


</html>

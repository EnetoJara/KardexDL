<!DOCTYPE html>
<html lang="es">

<head>
    <%include ../header%>
</head>

<body>

    <%include ../nav%>
    <div class="pusher" style="background-color: #DADADA">
        <div class="pusher" style="background-color: #DADADA">
            <%if (user.role === 'ALUMNO') {%>
            <div class="ui two columns centered grid">
                <div class="column">
                    <div class="ui large secondary pointing menu" style="background-color: #fff">
                        <a class="toc item"><i class="sidebar icon"></i> MENU</a>
                        <%include ../navegador%>
                    </div>
                </div>
            </div>
            <%} else {%>
            <div class="ui text container">
                <div class="ui large secondary pointing menu" style="background-color: #fff">
                    <a class="toc item">
                        <i class="sidebar icon"></i> MENU
                    </a>
                    <%include ../navegador%>
                </div>
            </div>
            <%}%>
            <div class="ui text container" style="padding-top:15px;padding-bottom:15px;">
                <h1 class="ui center aligned header">Resultados del semestre</h1>
            </div>
            <div id='reportPDF' class='ui text container'>
                <div class='ui segments'>
                    <div class='ui segment'>
                        <form id='misNotasForm' class='ui form' method='post' action='/pdf-<%=user.usuario%>'>
                            <input type='text' hidden value='<%=user.nombre%>' name='Nom'/>
                            <div class='three fields'>
                                <div class='field'>
                                    <label class='ui blue label'> Nombre *</label>
                                    <div class='ui yellow message centered'><%=user.nombre%></div>
                                </div>
                                <div class='field'>
                                    <label class='ui blue label'> Matricula *</label>
                                    <div class='ui yellow message centered'><%=user.usuario%></div>
                                </div>
                                <div class='field'>
                                    <label class='ui blue label'> Role *</label>
                                    <div class='ui yellow message centered'><%=user.role%></div>
                                </div>
                            </div>
                            <button id='descargarPDF' class='ui fluid large blue submit button'>Descargar en PDF</button>
                        </form>
                    </div>
                    <div  class='ui segment'>
                        <table class='ui definition table'>
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Primer Parcial</th>
                                    <th>Segundo Parcial</th>
                                    <th>Tercer Parcial</th>
                                    <th>TOTAL</th>
                                </tr>
                            </thead>
                            <tbody>
                            <%if (data.NOTAS.length > 0) {%>
                                <%for (var t = 0; t < data.NOTAS.length; t++) {%>
                                <tr>
                                    <td><%=data.NOTAS[t].MATERIA%></td>
                                    <td><%=data.NOTAS[t].PSEMESTRE%></td>
                                    <td><%=data.NOTAS[t].SSEMESTRE%></td>
                                    <td><%=data.NOTAS[t].TSEMESTR%></td>
                                    <td><%=data.NOTAS[t].TOTAL%></td>
                                </tr>
                                <%}%>
                            <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <%include ../footer%>

    </footer>
    </body>


</html>
